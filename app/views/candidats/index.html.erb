<ul class="list-group ">
  <% @candidats.each do |candidat| %>
    <li class="list-group-item">
      <div class=" list-avatars">
        <%= link_to candidat_path(candidat) do %>
          <%= image_tag candidat.photo, class: "avatar-list" %>
          <%end%>
          <div class="fw-bold text-center">
          <%= candidat.first_name %>

           <%= candidat.last_name %>
           <br>
        <%= candidat.partie %>

         </div>
    </li>
<%end%>
</ul>
