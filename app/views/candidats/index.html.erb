<ul class="list-group ">
  <% @candidats.each do |candidat| %>
    <li class="list-group-item d-flex justify-content-between align-items-start">
      <div class="ms-2 me-auto">
        <%= link_to candidat_path(candidat) do %>
          <%= image_tag candidat.photo, class: "img-fluid object-fit w-100 p-3" %>
        <% end %>
        <div class="fw-bold">
          <%= candidat.first_name %>
           <%= candidat.last_name %>
          <%= candidat.partie %>
        </div>
      </div>
    </li>
  <% end %>
