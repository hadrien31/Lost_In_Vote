<ul class="list-group ">
  <% @candidats.each do |candidat| %>
    <li class="list-group-item d-flex justify-content-between align-items-start">
      <div class="ms-2 me-auto">
        <%= link_to candidat_path(candidat) do %>
          <%= image_tag("centre.jpg", class:"img-fluid object-fit w-100 p-3") %>
        <% end %>
        <div class="fw-bold text-center">
          <%= candidat.first_name.upcase()%>
           <%= candidat.last_name.upcase() %>
          <br>
          <%= candidat.partie %>
        </div>
      </div>
    </li>
  <% end %>
</ul>
